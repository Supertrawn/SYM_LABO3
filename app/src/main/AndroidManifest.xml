<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.heigvd.iict.sym.a3dcompassapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="ch.heigvd.iict.sym.a3dcompassapp.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:windowSoftInputMode="adjustPan" android:name="ch.heigvd.iict.sym.a3dcompassapp.activity.BarcodeActivity" />
        <activity android:windowSoftInputMode="adjustPan" android:name="ch.heigvd.iict.sym.a3dcompassapp.activity.BeaconActivity" />
        <activity android:windowSoftInputMode="adjustPan" android:name="ch.heigvd.iict.sym.a3dcompassapp.activity.nfc.NFCActivity" />
        <activity android:windowSoftInputMode="adjustPan" android:name="ch.heigvd.iict.sym.a3dcompassapp.activity.nfc.NFCLoggedInActivity" />
        <activity android:windowSoftInputMode="adjustPan" android:name=".activity.compass.CompassActivity" />
    </application>

</manifest>